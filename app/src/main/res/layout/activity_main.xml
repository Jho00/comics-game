<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/image_box"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@drawable/todo_picture"
            />

        <LinearLayout
            android:id="@+id/game_box"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/game_box__question"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_marginTop="50dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/game_box__answer1"
                            android:layout_margin="2dp"
                            android:textSize="15sp"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="50dp"
                            android:textAlignment="center"
                            android:onClick="handleChooseVariant1"
                            android:padding="2dp"
                            android:background="@drawable/buttonbackground"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/game_box__answer2"
                            android:layout_margin="2dp"
                            android:textSize="15sp"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="50dp"
                            android:textAlignment="center"
                            android:onClick="handleChooseVariant2"
                            android:padding="2dp"
                            android:background="@drawable/buttonbackground"
                            android:gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="50dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/game_box__answer3"
                            android:layout_margin="2dp"
                            android:textSize="15sp"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="50dp"
                            android:textAlignment="center"
                            android:onClick="handleChooseVariant3"
                            android:padding="2dp"
                            android:background="@drawable/buttonbackground"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/game_box__answer4"
                            android:layout_margin="2dp"
                            android:textSize="15sp"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="50dp"
                            android:textAlignment="center"
                            android:onClick="handleChooseVariant4"
                            android:padding="2dp"
                            android:background="@drawable/buttonbackground"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>